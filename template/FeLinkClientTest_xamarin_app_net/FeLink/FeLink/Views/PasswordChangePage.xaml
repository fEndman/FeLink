<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FeLink.Views.PasswordChangePage"
			 Title="更改密码">
    <ContentPage.Content>
		<ScrollView>
			<StackLayout Padding="10,0,10,0" VerticalOptions="Center">
				<Label 
					Text="用户名:"
					FontSize="Body"
					Padding="20,0"/>
				<Entry 
					x:Name="EntryUsername"
					Margin="10, 0"/>
				<Label
					Text="旧密码:"
					FontSize="Body"
					Padding="20,0"/>
				<Entry
					x:Name="EntryPasswordOld"
					IsPassword="True"
					Margin="10, 0"/>
				<Label
					Text="新密码:"
					FontSize="Body"
					Padding="20,0"/>
				<Entry
					x:Name="EntryPasswordNew"
					IsPassword="True"
					Margin="10, 0"/>
				<Label
					Text="重复密码:"
					FontSize="Body"
					Padding="20,0"/>
				<Entry
					x:Name="EntryPasswordNew2"
					IsPassword="True"
					Margin="10, 0"/>
				<Button
					x:Name="ButtonChangePassword"
					Text="更改密码"
					Clicked="ButtonChangePassword_Clicked"/>
			</StackLayout>
		</ScrollView>
	</ContentPage.Content>
</ContentPage>